<h1>Listing laptops</h1>

<table>
  <tr>
    <th>Department</th>
    <th>Classroom</th>
    <th>Person</th>
    <th>Label number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @laptops.each do |laptop| %>
  <tr>
    <td><%= laptop.department.try(:title) %></td>
    <td><%= laptop.classroom.try(:number) %></td>
    <td><%= laptop.person.try(:fullname) %></td>
    <td><%= laptop.label_number %></td>
    <td><%= link_to 'Show', laptop %></td>
    <td><%= link_to 'Edit', edit_laptop_path(laptop) %></td>
    <td><%= link_to 'Destroy', laptop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

